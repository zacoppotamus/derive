{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esNext",
    "target": "es5",
    "lib": ["ES2015", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "dist"
  },
  "exclude": ["./**/node_modules"],
  "include": ["./src/**/*.ts"]
}
